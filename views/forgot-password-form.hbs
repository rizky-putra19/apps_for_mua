<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta
      name='description'
      content='A front-end template that helps you build fast, modern mobile web apps.'
    />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1.0, minimum-scale=1.0'
    />
    <title>Beauty Bell Reset Password</title>
    <link
      rel='icon'
      sizes='192x192'
      href='http://www.beautybell.id/wp-content/uploads/2018/03/bb-logo1-200x200.gif'
    />
    <link
      rel='stylesheet'
      href='https://fonts.googleapis.com/icon?family=Material+Icons'
    />
    <link
      rel='stylesheet'
      href='https://code.getmdl.io/1.3.0/material.pink-lime.min.css'
    />
    <script defer src='https://code.getmdl.io/1.3.0/material.min.js'></script>

    <style>
      body { background-color: lightgray; } .verified-info-card.mdl-card {
      width: 420px; max-width: 100%; height: 550px; } .verified-info-card >
      .mdl-card__title { color: #fff; background:
      url('https://storage.googleapis.com/media-prd/assets/media/{{messageImage}}')
      bottom right 15% no-repeat #ff5f94; } .centered { position: fixed; top:
      50%; left: 50%; /* bring your own prefixes */ transform: translate(-50%,
      -50%); }
    </style>

  </head>
  <body>
    <div class='verified-info-card mdl-card mdl-shadow--2dp centered'>
      <div class='mdl-card__title mdl-card--expand'>
        <h2 class='mdl-card__title-text'>{{messageNote}}</h2>
      </div>
      <div class='mdl-card__supporting-text'>
        <h4>Hi {{messageHeader}}<p>{{messageSubheader}}</p></h4>
        <form action='{{actionUrl}}' id='update_password_form' method='post'>
          <input type='hidden' id='token' name='token' value='{{token}}' />
          <input type='hidden' id='email' name='email' value='{{email}}' />
          <input type='hidden' id='password' name='password' value='' />
          <div class='mdl-textfield mdl-js-textfield' id='password_container'>
            <input
              class='mdl-textfield__input'
              type='password'
              id='new_password'
              onfocusout='isPasswordValid();'
              required
            />
            <label class='mdl-textfield__label' for='new_password'>New Password</label>
            <span class='mdl-textfield__error'>Minimum 6 character (max 20)</span>
          </div>
          <div
            class='mdl-textfield mdl-js-textfield'
            id='confirm_password_container'
          >
            <input
              class='mdl-textfield__input'
              type='password'
              id='confirm_password'
            />
            <label class='mdl-textfield__label' for='confirm_password'>Confirm
              Password</label>
            <span class='mdl-textfield__error'>Not match</span>
          </div>
        </form>
      </div>
      <div class='mdl-card__actions mdl-card--border'>
        <a
          href='#'
          id='submit'
          class='mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect'
          disabled
          onclick='submit();'
        >
          {{actionText}}
        </a>
      </div>
    </div>
    <script type='text/javascript'>
      function isPasswordValid() { const passwordContainerElement =
      document.getElementById("password_container"); const isValid = new
      RegExp("^.{6,20}$").test( document.getElementById("new_password").value );
      if (isValid) { passwordContainerElement.classList.remove("is-invalid"); }
      else { passwordContainerElement.classList.add("is-invalid"); //
      passwordContainerElement.classList.add('is-dirty'); } } function isMatch()
      { return ( document.getElementById("new_password").value ==
      document.getElementById("confirm_password").value ); } function
      checkPass() { const submitElement = document.getElementById("submit");
      const confirmContainerElement = document.getElementById(
      "confirm_password_container" ); const match = isMatch(); if (match) {
      confirmContainerElement.classList.remove("is-invalid");
      submitElement.removeAttribute("disabled"); } else {
      confirmContainerElement.classList.add("is-invalid");
      confirmContainerElement.classList.add("is-dirty"); } return match; }
      function submit() { const pass = checkPass(); if (pass) {
      document.getElementById("password").value =
      document.getElementById("new_password").value;
      document.getElementById("update_password_form").submit(); } }
    </script>
  </body>
</html>